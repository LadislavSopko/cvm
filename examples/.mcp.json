{
  "mcpServers": {
    "mongodb": {
      "command": "npx",
      "args": [
        "-y",
        "mongodb-lens",
        "mongodb://root:example@localhost:27017/cvm?authSource=admin"
      ]
    },
    "cvm": {
      "command": "node",
      "args": ["../apps/cvm-server/dist/main.js"],
      "env": {
        "MONGODB_URI": "mongodb://root:example@localhost:27017/cvm?authSource=admin",
        "CVM_LOG_LEVEL": "info"
      }
    }
  }
}
